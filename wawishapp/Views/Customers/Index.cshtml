    @model IEnumerable<wawishapp.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<div class="form-group">
    @Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary" })
</div>
@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Birthdate</th>
                <th>Membership</th>
                <th>Discount Rate</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
             @foreach (var customer in Model)
             {
                 <tr>
                     <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, new { title = string.Format("Editar a {0}", customer.Name) })</td>
                     <td>@customer.Birthdate.Value.ToString("dd-MM-yyyy")</td>
                     <td>@customer.MembershipType.MembershipName</td>
                     <td>@customer.MembershipType.DiscountRate %</td>
                     <td>
                         <button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                     </td>
                 </tr>
             }
        </tbody>
    </table>
}
@section scripts
{
    <script>
        // ▼ Assign a method for each '#customers .js-delete' elements
        $(document).ready(function () {
            $('#customers .js-delete').on("click", function () {
                var button = $(this); // ◄ Saves the button element
                // ▼ Executes DELETE method for an existing Web API
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            })
        });
    </script>
}
